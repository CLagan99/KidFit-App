<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA579A"
    tools:context=".GirlSitUps">

    <TextView
        android:id="@+id/txt_exercise_title"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/bangers"
        android:text="Sit Ups"
        android:gravity="center"
        android:textSize="65sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/iv_tutorial"
        android:layout_width="362dp"
        android:layout_height="185dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        app:srcCompat="@drawable/sit_ups_tutorial" />

    <TextView
        android:id="@+id/txt_su_description"
        android:layout_width="362dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="306dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="1. Lie down on your back."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_su_description2"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="354dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="2. Bend your legs and place feet firmly on the ground to stabilize your lower body. "
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_su_description3"
        android:layout_width="364dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="407dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="3. Cross your hands to opposite shoulders or place them behind your ears, without pulling on your neck."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_su_description4"
        android:layout_width="368dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="492dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="4. Curl your upper body all the way up toward your knees. Exhale as you lift."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_su_description5"
        android:layout_width="364dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="554dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="5. Slowly, lower yourself down, returning to your starting point. Inhale as you lower."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/bangers"
        android:text="Go Back to Exercises"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#D3CCCC" />

</RelativeLayout>
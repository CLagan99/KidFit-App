<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA579A"
    tools:context=".AboutUsGirlActivity">

    <ImageView
        android:id="@+id/iv_kidfit"
        android:layout_width="155dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/kidfitlogo" />

    <TextView
        android:id="@+id/txt_about_us"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="About KidFit"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="317dp"
        android:layout_height="279dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="273dp"
        android:fontFamily="@font/antic"
        android:gravity="center_horizontal"
        android:text="KidFit is a Health and Well-Being app designed to motivate children into staying active."
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/bangers"
        android:text="Go Back to Menu"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#C8C1C1" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BC5D3"
    tools:context=".BoyWalkingActivity">

    <TextView
        android:id="@+id/txt_steps_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:fontFamily="@font/antic"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="110sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_total_steps"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignTop="@+id/txt_steps_taken"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="284dp"
        android:fontFamily="@font/antic"
        android:text="/ 250 Steps"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_end"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:fontFamily="@font/bangers"
        android:text="End"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="italic"
        app:backgroundTint="#B6ADAD" />

</RelativeLayout>
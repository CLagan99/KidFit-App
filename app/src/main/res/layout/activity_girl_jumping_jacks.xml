<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA579A"
    tools:context=".GirlJumpingJacks">

    <TextView
        android:id="@+id/txt_exercise_title"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/bangers"
        android:text="Jumping Jacks"
        android:gravity="center"
        android:textSize="55sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/iv_tutorial"
        android:layout_width="199dp"
        android:layout_height="174dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/jumping_jacks_tutorial" />

    <TextView
        android:id="@+id/txt_jj_description"
        android:layout_width="364dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="311dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="1. Stand upright with your legs together, arms at your sides."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/txt_jj_description2"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="382dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="2. Bend your knees slightly, and jump into the air. "
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_jj_description3"
        android:layout_width="364dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="440dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="3. As you jump, spread your legs to be about shoulder-width apart. Stretch your arms out and over your head."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_jj_description4"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="535dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="4. Jump back to starting position. "
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_jj_description5"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="574dp"
        android:fontFamily="@font/antic"
        android:gravity="center_vertical"
        android:text="5. Repeat."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/bangers"
        android:text="Go Back to Exercises"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#D3CCCC" />

</RelativeLayout>